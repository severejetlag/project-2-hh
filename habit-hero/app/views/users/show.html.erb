<div>
  Welcome, <%= @user.first_name %>!
</div>
<button><%= link_to "Edit", edit_user_path(current_user)%></button>
<button><%=link_to "Delete", delete_user_path(current_user), method: :delete%></button>
<hr>
<table>
  <colgroup>
    <col style="background-color: yellow">
    <col>
    <col>
    <col>
    <col>
    <col>
    <col>
    <col>
  </colgroup>
  <tr>
    <th>Habits</th>
    <th>Monday</th>
    <th>Tuesday</th>
    <th>Wednesday</th>
    <th>Thursday</th>
    <th>Friday</th>
    <th>Saturday</th>
    <th>Sunday</th>
  </tr>
  <% @habits.each do |habit| %>
    <tr>
      <td><%= habit.title%> </td>
      <% habit.logged_habits.each do |log| %>
      <td><%= log.date_completed %> </td>
      <% end %>
    </tr>
  <% end %>
</table>

