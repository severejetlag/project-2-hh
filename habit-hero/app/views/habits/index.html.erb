
<section id="day-tracker" class="container">
	<h1>Daily Tracker</h1>
	<ul>
		<li class="row">
			<div class="col s8">
				<h3>Task</h3>
			</div>
			<div class="col s4">
				<h3>Completed</h3>
			</div>
		</li>
		<% @habits.each do |habit|%>
		<li class="row">
			<div class="col s8">
				<h4><%= habit.title%></h4>
				<button><%=link_to "Delete", delete_habit_path(habit), method: :delete%></button>
				<button><%=link_to "Edit", edit_habit_path(habit)%></button>
			</div>
			<div class="col s4">
				<input type="checkbox" id="test5" />
				<label for="test5"></label>
			</div>
		</li>
		<% end %>
	</ul>
</section>

<div class="container">

</div>

<button data-target="modal1" class="btn modal-trigger">Modal</button>
<!-- Modal Structure -->
<div id="modal1" class="modal modal-fixed-footer">
	<div class="modal-content">
		<%= form_with scope: :habit, url: "/habits" do|f|%>
			<div>
				<%= f.text_field :title, class: 'validate', placeholder: "Habit" %>
			</div>
			<div>
				<%= f.text_area :description, class: 'materialize-textarea', placeholder: "Description" %>
			</div>
			<div>
				<%= f.number_field :weekly_goal, class: 'validate', placeholder: "Weekly_goal" %>
			</div>

			<%= f.submit "Add Habit", class: ' waves-effect waves-green btn-flat' %>
		<% end %>
	</div>
	<div class="modal-footer">
		<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Close</a>
	</div>
</div>
